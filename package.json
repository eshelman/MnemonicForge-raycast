{
  "name": "mnemonicforge-raycast",
  "version": "0.1.0",
  "description": "Raycast extension for the MnemonicForge prompt library.",
  "license": "MIT",
  "scripts": {
    "dev": "ray dev",
    "lint": "tsc --noEmit",
    "build": "ray build"
  },
  "dependencies": {
    "@raycast/api": "^1.77.0",
    "@raycast/utils": "^1.12.5",
    "chokidar": "^3.6.0",
    "fuse.js": "^6.6.2",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "raycast": {
    "schemaVersion": 1,
    "title": "MnemonicForge",
    "description": "Browse, parameterize, and run prompts from your MnemonicForge library.",
    "icon": "assets/icon.png",
    "author": "MnemonicForge Team",
    "categories": [
      "productivity"
    ],
    "commands": [
      {
        "name": "browse-prompts",
        "title": "Browse Prompts",
        "subtitle": "MnemonicForge",
        "description": "Search your MnemonicForge prompt library.",
        "mode": "view"
      },
      {
        "name": "run-prompt",
        "title": "Run Prompt",
        "subtitle": "MnemonicForge",
        "description": "Fill parameters and generate a prompt output.",
        "mode": "view"
      }
    ],
    "preferences": [
      {
        "name": "promptsPath",
        "title": "Prompts Folder",
        "description": "Absolute path to the prompt_templates directory.",
        "type": "textfield",
        "placeholder": "/Users/you/Projects/MnemonicForge/prompt_templates",
        "required": true
      },
      {
        "name": "pasteAfterCopy",
        "title": "Paste After Copy",
        "type": "checkbox",
        "default": true
      },
      {
        "name": "enableSend",
        "title": "Enable OpenAI Send",
        "type": "checkbox",
        "default": false
      },
      {
        "name": "openaiModel",
        "title": "Default OpenAI Model",
        "type": "textfield",
        "placeholder": "gpt-4.1-mini"
      },
      {
        "name": "openaiTemperature",
        "title": "Default Temperature",
        "type": "textfield",
        "placeholder": "0.2"
      },
      {
        "name": "openaiMaxTokens",
        "title": "Default Max Tokens",
        "type": "textfield",
        "placeholder": "1024"
      },
      {
        "name": "contextDefaultClipboard",
        "title": "Capture Clipboard by Default",
        "type": "checkbox",
        "default": false
      },
      {
        "name": "contextDefaultSelection",
        "title": "Capture Selected Text by Default",
        "type": "checkbox",
        "default": false
      },
      {
        "name": "contextDefaultApp",
        "title": "Capture Frontmost App by Default",
        "type": "checkbox",
        "default": false
      },
      {
        "name": "contextDefaultDate",
        "title": "Capture Current Date by Default",
        "type": "checkbox",
        "default": false
      },
      {
        "name": "debugLog",
        "title": "Enable Debug Logging",
        "type": "checkbox",
        "default": false
      }
    ]
  }
}
